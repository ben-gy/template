title
  = '(DEV) ' if Rails.env.development?
  = '(STG) ' if ENV['CURRENT_ENVIRONMENT'] == 'staging'
  | #{@page_title.present? ? @page_title : Settings.metadata.title}
meta name="description" content="#{@page_summary.present? ? @page_summary : Settings.metadata.description}"

/ Open Graph (Facebook, LinkedIn, etc)
meta property="og:title" content="#{@page_title.present? ? @page_title : Settings.metadata.title}"
meta property="og:description" content="#{@page_summary.present? ? @page_summary : @page_summary.present? ? @page_summary : Settings.metadata.description}"
meta property="og:image" content="#{root_url}logos/logo_social.png"
meta property="og:url" content="#{root_url}"

/ Twitter
meta name="twitter:title" content="#{@page_title.present? ? @page_title : Settings.metadata.title}"
meta name="twitter:description" content="#{@page_summary.present? ? @page_summary : Settings.metadata.description}"
meta name="twitter:image" href="#{root_url}logos/logo_square.png"
meta name="twitter:card" content="summary_large_image"

/ Icons
link rel="shortcut icon" href="#{root_url}favicon.ico"
link rel="apple-touch-icon" href="#{root_url}favicon.ico"
link rel="icon" href="#{root_url}favicon.ico"
